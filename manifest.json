{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "1.0.0",
  "content_security_policy": "script-src 'self' https://alcdn.msauth.net/lib/1.4.11/js/msal.min.js; object-src 'self'",

  "browser_action": {
    "default_icon": {              
      "16": "images/icon16.png",   
      "32": "images/icon32.png",   
      "48": "images/icon48.png"    
    },
    "default_title": "Click Me",   
    "default_popup": "index.html" 
  },
  "description": "A plain text description",
  "icons": {"128": "images/icon128.png"},
  "permissions": ["activeTab","contextMenus","storage"],
  "background": {
      "persistant": false,
      "scripts": ["javaScript/backgrounds.js"]
  }
}